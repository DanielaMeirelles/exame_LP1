<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="fatec.sjc.sp.tarefa3javafxlp1.controller.PessoaController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Nome:"/>
    <TextField fx:id="nameField"/>

    <Label text="E-mail:"/>
    <TextField fx:id="emailField"/>

    <Label text="Telefone:"/>
    <TextField fx:id="phoneField"/>

    <Label text="Senha:"/>
    <PasswordField fx:id="passwordField"/>

    <HBox alignment="CENTER" spacing="10">
        <ImageView fx:id="profileImageView" fitWidth="100" fitHeight="100"/>
        <Button text="Selecionar Imagem" fx:id="selectImageButton"/>
    </HBox>

    <Button text="Cadastrar" fx:id="registerButton"/>
</VBox>
