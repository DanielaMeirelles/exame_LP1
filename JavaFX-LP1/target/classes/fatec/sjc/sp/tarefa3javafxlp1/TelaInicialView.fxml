<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane style="-fx-background-color: #faf7fb;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fatec.sjc.sp.tarefa3javafxlp1.controller.TelaInicialController">

    <top>
        <VBox alignment="CENTER" spacing="10.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="BEM VINDO(A)!" />
            <Label style="-fx-font-size: 16px;" text="Escolha uma categoria" />
        </VBox>
    </top>

    <center>
        <GridPane alignment="CENTER" hgap="20.0" vgap="20.0">
            <!-- Primeira linha -->
            <VBox alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <ImageView fitHeight="120.0" fitWidth="200.0">
                    <Image url="@/images/animais.png" />
                </ImageView>
                <Button onAction="#onAnimais" text="Animais" />
            </VBox>

            <VBox alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="1">
                <ImageView fitHeight="120.0" fitWidth="200.0">
                    <Image url="@/images/bicicletas.jpg" />
                </ImageView>
                <Button onAction="#onBicicletas" text="Bicicletas" />
            </VBox>

            <VBox alignment="CENTER" GridPane.columnIndex="2" GridPane.rowIndex="1">
                <ImageView fitHeight="120.0" fitWidth="200.0">
                    <Image url="@/images/carros.jpg" />
                </ImageView>
                <Button onAction="#onCarros" text="Carros" />
            </VBox>

            <VBox alignment="CENTER" GridPane.columnIndex="3" GridPane.rowIndex="1">
                <ImageView fitHeight="120.0" fitWidth="200.0">
                    <Image url="@/images/celulares.png" />
                </ImageView>
                <Button onAction="#onCelulares" text="Celulares" />
            </VBox>

            <VBox alignment="CENTER" GridPane.columnIndex="4" GridPane.rowIndex="1">
                <ImageView fitHeight="120.0" fitWidth="200.0">
                    <Image url="@/images/computadores.jpg" />
                </ImageView>
                <Button onAction="#onComputadores" text="Computadores" />
            </VBox>

            <!-- Segunda linha -->
            <VBox alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="2">
                <ImageView fitHeight="120.0" fitWidth="200.0">
                    <Image url="@/images/filmes.jpg" />
                </ImageView>
                <Button onAction="#onFilmes" text="Filmes" />
            </VBox>

            <VBox alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <ImageView fitHeight="120.0" fitWidth="200.0">
                    <Image url="@/images/flores.jpg" />
                </ImageView>
                <Button onAction="#onFlores" text="Flores" />
            </VBox>

            <VBox alignment="CENTER" GridPane.columnIndex="2" GridPane.rowIndex="2">
                <ImageView fitHeight="120.0" fitWidth="200.0">
                    <Image url="@/images/livros.png" />
                </ImageView>
                <Button onAction="#onLivros" text="Livros" />
            </VBox>

            <VBox alignment="CENTER" GridPane.columnIndex="3" GridPane.rowIndex="2">
                <ImageView fitHeight="120.0" fitWidth="200.0">
                    <Image url="@/images/pessoas.jpeg" />
                </ImageView>
                <Button onAction="#onPessoas" text="Pessoas" />
            </VBox>

            <VBox alignment="CENTER" GridPane.columnIndex="4" GridPane.rowIndex="2">
                <ImageView fitHeight="120.0" fitWidth="200.0">
                    <Image url="@/images/produtos.jpeg" />
                </ImageView>
                <Button onAction="#onProdutos" text="Produtos" />
            </VBox>

            <VBox alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="3">
                <ImageView fitHeight="120.0" fitWidth="200.0">
                    <Image url="@/images/fracao.png" />
                </ImageView>
                <Button onAction="#onFracoes" text="Frações" />
            </VBox>
        </GridPane>
    </center>
</BorderPane>
